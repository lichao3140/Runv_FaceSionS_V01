<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/show_card"
        android:layout_width="436px"
        android:layout_height="270px"
        android:layout_centerInParent="true"
        android:visibility="gone" >

        <ImageView
            android:layout_width="205px"
            android:layout_height="72px"
            android:layout_centerHorizontal="true"
            android:src="@mipmap/icon_ts" />

        <RelativeLayout
            android:layout_width="436px"
            android:layout_height="223px"
            android:layout_alignParentBottom="true"
            android:background="@mipmap/bg_ts" >
            <LinearLayout
                android:layout_width="436px"
                android:layout_height="223px"
                android:layout_centerHorizontal="true"
                android:gravity="center" >

                <TextView
                    android:id="@+id/loadcardText"
                    android:layout_width="400px"
                    android:layout_height="200px"
                    android:layout_centerHorizontal="true"
                    android:text="模板生成中"
                    android:textColor="#EEC900"
                    android:textSize="50px"
                    android:singleLine="false"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_marginLeft="25px"/>

            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>
